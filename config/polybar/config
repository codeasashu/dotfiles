interval = 3.0

;ping-interval = 3

udspeed-minwidth = 5

accumulate-stats = true

unknown-as-up = true

[module/gap]
type = custom/text
content = "   "

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
